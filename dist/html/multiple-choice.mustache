<form id="{{id}}" class="multiple-choice" data-ali="multiple-choice">
	{{{stem}}}
	{{#responses}}
	<div class="input-group">
		<input type="{{type}}" id="response_{{value}}" value="{{value}}" data-correct="{{correct}}">
		<label for="response_{{value}}">{{{text}}}</label>
	</div>
	{{/responses}}
	<div class="submit-row">
		<button class="submit">Submit</button>
	</div>
	{{#incorrectFeedback}}
		<div class="feedback-content incorrect">
			{{{incorrectFeedback}}}
		</div>
	{{/incorrectFeedback}}
	{{#correctFeedback}}
		<div class="feedback-content incorrect">
			{{{correctFeedback}}}
		</div>
	{{/correctFeedback}}

	{{#incorrectDialog}}
		<div class="feedback-content incorrect">
			{{{incorrectDialog}}}
		</div>
	{{/incorrectDialog}}
	{{#correctDialog}}
		<div class="feedback-content incorrect">
			{{{correctDialog}}}
		</div>
	{{/correctDialog}}
</form>